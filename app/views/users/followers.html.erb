<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
  <h2>Follower Users</h2>
  <% if @user.followed.count == 0 %>
    <div class="w-100">ユーザはいません</div>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @user.follower_user.each do |user|  %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %></td>
            <td><%= user.name %></td>
            <td>フォロー数： <%= user.follower.count %></td>
            <td>フォロワー数：<%= user.followed.count %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  </div>
</div>