<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <% if @range == "User" %>
      <h2>Users search for "<%= @word %>"</h2>
      <% if @users.count == 0 %>
        <div class="w-100">条件にあてはまる検索結果はありません</div>
      <% else %>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>introduction</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to attachment_image_tag(user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60"), "/users/#{user.id}" %></td>
              <td><%= link_to user.name, user_path(user) %></td>
              <td><%= user.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    <% else %>
      <h2>Books search for "<%= @word %>"</h2>
      <% if @books.count == 0 %>
        <div class="w-100">条件にあてはまる検索結果はありません</div>
      <% else %>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>title</th>
            <th>opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to attachment_image_tag(book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60"), "/users/#{book.user.id}" %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    <% end %>
  </div>
</div>
